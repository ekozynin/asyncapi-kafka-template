{
  "name": "asyncapi-kafka-template",
  "version": "0.0.1",
  "description": "Generate deployment scripts for a kafka cluster.",
  "scripts": {
    "test": "echo 'No tests available in this project.'",
    "release": "echo 'Not available yet. Will call yarn semantic-release'",
    "lint": "eslint --max-warnings 0 --fix --config .eslintrc .",
    "generate:readme:toc": "markdown-toc -i README.md",
    "generate:readme:contributors": "all-contributors generate",
    "generate:assets": "yarn generate:readme:toc ; yarn generate:readme:contributors",
    "bump:version": "echo 'We do not trigger releases for this template. Normally this script should invoke \"npm --no-git-tag-version --allow-same-version version $VERSION\"'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekozynin/asyncapi-kafka-template.git"
  },
  "keywords": [
    "asyncapi",
    "generator",
    "template",
    "kafka"
  ],
  "author": "Eugen Kozynin <ekozynin@gmail.com> (https://github.com/ekozynin/)",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/ekozynin/asyncapi-kafka-template/issues"
  },
  "homepage": "https://github.com/ekozynin/asyncapi-kafka-template#readme",
  "dependencies": {
    "@asyncapi/generator-filters": "^2.0.0",
    "@asyncapi/generator-hooks": "^0.1.0",
    "@asyncapi/generator-react-sdk": "^0.2.11"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "generator": {
    "renderer": "react",
    "supportedProtocols": [
      "kafka"
    ],
    "parameters": {
      "customParameter": {
        "description": "Just an example of a parameter"
      }
    },
    "nonRenderableFiles": [
      "style.css",
      "sample.gif"
    ],
    "generator": ">=1.8.0"
  },
  "devDependencies": {
    "@asyncapi/generator": "^1.8.0",
    "@asyncapi/parser": "^1.6.0",

    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",

    "jest": "^26.4.2",
    "jest-esm-transformer": "^1.0.0",

    "all-contributors-cli": "^6.19.0",
    "markdown-toc": "^1.2.0",
    "semantic-release": "^17.4.4"
  },
  "jest": {
    "transform": {
      "\\.m?jsx?$": "jest-esm-transformer"
    },
    "collectCoverageFrom": [
      "{filters,hooks}/**/*.js",
      "!hooks/generateExtraFormats.js"
    ]
  }
}
